{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ViteJS",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "esModuleInterop": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
